{% extends '@App/master.html.twig' %}

{% block body %}
    {% include '@App/elements/breadcrumb.html.twig' with {
        'sprint': sprint
    } %}
    <div class="p-3 mb-3 bg-success text-white">
        <div class="container">
            <h4 class="mb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <span>{{ issue.summary }} ({{ issue.key }})</span>
                    <a href="https://webstores.atlassian.net/browse/{{ issue.key }}" target="_blank" title="Jira openen">
                        <span style="font-size: smaller;" class="oi oi-external-link text-white"></span>
                    </a>
                </div>
            </h4>
        </div>
    </div>
    <div class="container">
        <div class="p-3 mb-3 card">
            <p class="mb-0"><strong>Status</strong>: {{ issue.status.name }}</p>
            <p class="mb-0"><strong>Storypoints</strong>: {{ issue.sp }}</p>
            <p class="mb-0"><strong>Waarde</strong>: {{ issue.value }}</p>
            <p class="mb-0"><strong>Estimate</strong>: {{ app_calculateHoursbySeconds(issue.estimate) }} uur</p>
            <p class="mb-0"><strong>Logged</strong>: {{ app_calculateHoursbySeconds(issue.timespent) }} uur</p>
        </div>

        <h5 class="mb-3">Logs</h5>
        {% include '@App/elements/tables/logs.html.twig' with {
            'logs': logs['logs'],
            'showUser': true,
            'showKey': false,
            'showFooter': false
        } %}
    </div>
{% endblock %}
