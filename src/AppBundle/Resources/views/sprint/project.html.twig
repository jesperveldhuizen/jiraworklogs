{% extends '@App/master.html.twig' %}

{% block body %}
    {% include '@App/elements/breadcrumb.html.twig' with {
        'sprint': sprint
    } %}
    <div class="p-3 mb-3 bg-success text-white">
        <div class="container">
            <h4 class="mb-0">Project: {{ projectKey }}</h4>
        </div>
    </div>
    <div class="container">
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingLogs">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseLogs">
                            Logs ({{ logs|length }})
                        </button>
                    </h5>
                </div>
                <div id="collapseLogs" class="collapse" aria-labelledby="headingLogs" data-parent="#accordion">
                    <div class="card-body">
                        {% include '@App/elements/tables/logs.html.twig' with {
                            'logs': logs
                        } %}
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingIssues">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseIssues">
                            Issues ({{ issues|length }})
                        </button>
                    </h5>
                </div>
                <div id="collapseIssues" class="collapse" data-parent="#accordion">
                    <div class="card-body">
                        {% include '@App/elements/tables/issues.html.twig' with {
                            'issues': issues,
                            'showExceeded': false
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
