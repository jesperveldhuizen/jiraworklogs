<div class="p-3 bg-secondary text-white">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>Jira worklogs</h1>
                {% if sprint is defined and sprint is not empty %}
                    <p class="mb-0">{{ sprint['name'] }} (van {{ app_getDateDayByString(sprint['start'], false) }} tot en met {{ app_getDateDayByString(sprint['end'], false) }})</p>
                {% endif %}
            </div>
            <a href="{{ path('app_clear') }}" class="btn btn-info">Refresh</a>
        </div>
    </div>
</div>
